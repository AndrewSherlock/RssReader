<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:orientation="horizontal"
    android:id="@+id/rss_list_item"
    >

    <ImageView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:layout_margin="5sp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/item_image"
        />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UK cabinet agrees draft Brexit deal"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/headline"
            />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10sp"
            android:text="British Prime Minister Theresa May has said that the UK cabinethas agreed the draft Brexit withdrawal agreement after a five-hour meeting at Downing Street."
            />

    </LinearLayout>
</LinearLayout>